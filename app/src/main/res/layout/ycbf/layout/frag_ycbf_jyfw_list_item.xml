<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/shape_shadow_bottom"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--标题-->
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <ImageView
            android:background="@drawable/ic_home_ycbf"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
        <TextView
            android:id="@+id/tv_jyfw_listItem_title"
            android:textColor="@color/black"
            android:maxLines="1"
            android:ellipsize = "end"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="20dp"/>
        <TextView
            android:id="@+id/tv_jyfw_listItem_fbsj"
            android:text="2020-02-03"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="20dp"/>
    </LinearLayout>
    <!--薪资范围-->
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:text="@string/ycbf_et_jyfw_xzfw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            />
        <TextView
            android:id="@+id/tv_jyfw_listItem_xzfw"
            android:layout_width="match_parent"
            android:layout_height="20dp"/>
    </LinearLayout>
    <!--招聘人数-->
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:text="@string/ycbf_et_jyfw_zprs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            />
        <TextView
            android:id="@+id/tv_jyfw_listItem_zprs"
            android:layout_width="match_parent"
            android:layout_height="20dp"/>
    </LinearLayout>
    <!--工作地点-->
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:text="@string/ycbf_et_jyfw_gzdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            />
        <TextView
            android:id="@+id/tv_jyfw_listItem_gzdd"
            android:layout_width="match_parent"
            android:layout_height="20dp"/>
    </LinearLayout>
</LinearLayout>

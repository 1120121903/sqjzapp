<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".subModule.ycbf.jyfw.YcbfJyfwDetailActivity">
    <!--顶部标题栏-->
    <com.hjq.bar.TitleBar
        android:visibility="visible"
        android:id="@+id/tb_ycbf_jyfw"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@color/blue1"
        app:titleColor="@color/white"
        app:leftBackground="@null"
        app:leftColor="@color/white"
        app:rightBackground="@null"
        app:barStyle="transparent"
        app:leftTitle="@string/title_back"
        app:rightSize="0dp"
        app:title="@string/ycbf_tb_detail" />
    <!--中间内容-->
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--标题-->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:background="@drawable/ic_home_ycbf"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <TextView
                android:id="@+id/tv_ycbf_jyfw_title"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <!--截止时间-->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/ycbf_et_jyfw_jzsj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                />
            <TextView
                android:id="@+id/tv_ycbf_jyfw_jzsj"
                android:layout_width="wrap_content"
                android:layout_height="20dp"/>
        </LinearLayout>
        <!--薪资范围-->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/ycbf_et_jyfw_xzfw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                />
            <TextView
                android:id="@+id/tv_ycbf_jyfw_xzfw"
                android:layout_width="wrap_content"
                android:layout_height="20dp"/>
        </LinearLayout>
        <!--招聘人数-->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/ycbf_et_jyfw_zprs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                />
            <TextView
                android:id="@+id/tv_ycbf_jyfw_zprs"
                android:layout_width="wrap_content"
                android:layout_height="20dp"/>
        </LinearLayout>
        <!--工作地点-->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/ycbf_et_jyfw_gzdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                />
            <TextView
                android:id="@+id/tv_ycbf_jyfw_gzdd"
                android:layout_width="wrap_content"
                android:layout_height="20dp"/>
        </LinearLayout>
        <!--岗位描述-->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/ycbf_et_jyfw_gwms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                />
            <TextView
                android:id="@+id/tv_ycbf_jyfw_gwms"
                android:layout_width="wrap_content"
                android:layout_height="20dp"/>
        </LinearLayout>
        <!--岗位要求-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/ycbf_et_jyfw_gwyq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                />
            <com.kingja.supershapeview.view.SuperShapeTextView
                android:id="@+id/tv_ycbf_jyfw_gwyq"
                android:gravity="top"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:paddingTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:super_dashWidth="2dp"
                app:super_solidColor="@color/white"
                app:super_strokeColor="@color/black"
                app:super_strokeWidth="0dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/shape_shadow_bottom"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--标题-->
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <ImageView
            android:background="@drawable/ic_home_ycbf"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
        <TextView
            android:id="@+id/tv_shbz_listItem_title"
            android:textColor="@color/black"
            android:maxLines="1"
            android:ellipsize = "end"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="20dp"/>
        <TextView
            android:id="@+id/tv_shbz_listItem_time_fbsj"
            android:text="2020-02-03"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="20dp"/>
    </LinearLayout>
    <!--报名条件-->
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:text="@string/ycbf_et_shbz_bmtj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            />
        <TextView
            android:id="@+id/tv_shbz_listItem_time_bmtj"
            android:layout_width="match_parent"
            android:layout_height="20dp"/>
    </LinearLayout>
    <!--截止时间-->
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:text="@string/ycbf_et_shbz_jzsj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            />
        <TextView
            android:id="@+id/tv_shbz_listItem_time_jzsj"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_shbz_listItem_time_state"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="20dp"/>
    </LinearLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--社会保障-->
    <!--中间内容-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <!--标题-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">
            <TextView
                android:text="@string/ycbf_et_shbz_title"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/et_ycbf_shbz_title"
                android:enabled="false"
                android:textColor="@color/black"
                android:layout_gravity="left"
                android:paddingLeft="12dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <!--申请理由-->
        <com.kingja.supershapeview.view.SuperShapeEditText
            android:id="@+id/et_ycbf_shbz_sqly"
            android:gravity="top"
            android:hint="@string/ycbf_set_shbz_sqly"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="12dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            app:super_dashWidth="2dp"
            app:super_solidColor="@color/white"
            app:super_strokeColor="@color/black"
            app:super_strokeWidth="1dp"/>
        <!--证明文件-->
        <TextView
            android:text="@string/jzdbg_tv_sqbg_zmwj"
            android:layout_margin="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="@color/gray">
            <ImageButton
                android:background="@color/white"
                android:src="@drawable/ic_wcqj_wyqj_zmwj"
                android:layout_margin="3dp"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/bt_ycbf_shbz_save"
        android:background="@color/blue1"
        android:textColor="@color/white"
        android:text="提交"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
</LinearLayout>

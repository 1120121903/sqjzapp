<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".subModule.ycbf.shfw.YcbfShfwDetailActivity">
    <!--顶部标题栏-->
    <com.hjq.bar.TitleBar
        android:visibility="visible"
        android:id="@+id/tb_ycbf_shfw"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@color/blue1"
        app:titleColor="@color/white"
        app:leftBackground="@null"
        app:leftColor="@color/white"
        app:rightBackground="@null"
        app:barStyle="transparent"
        app:leftTitle="@string/title_back"
        app:rightSize="0dp"
        app:title="@string/ycbf_tb_detail" />
    <!--中间内容-->
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--标题-->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <TextView
                android:id="@+id/tv_ycbf_shfw_title"
                android:gravity="center"
                android:theme="@style/MyTextView_many_title"
                android:layout_width="300dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <!--内容-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="30dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <com.kingja.supershapeview.view.SuperShapeTextView
                android:id="@+id/tv_ycbf_shfw_content"
                android:theme="@style/MyTextView_cotent"
                android:gravity="top"
                android:paddingTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:super_dashWidth="2dp"
                app:super_solidColor="@color/white"
                app:super_strokeColor="@color/black"
                app:super_strokeWidth="0dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
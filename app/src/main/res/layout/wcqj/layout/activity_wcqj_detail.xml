<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".subModule.wcqj.WcqjDetailActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.hjq.bar.TitleBar
            android:id="@+id/tb_wcqj_detail"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@color/green"
            app:titleColor="@null"
            app:leftBackground="@null"
            app:rightBackground="@null"
            app:barStyle="transparent"
            app:leftTitle="@string/title_back"
            app:rightSize="0dp"
            app:title="@string/wcqj_bt_detail_title" />
        <!--请假内容-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_shadow">
            <!--标题-->
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <ImageView
                    android:background="@drawable/rcbg_list_title"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
                <TextView
                    android:id="@+id/tv_wcqj_detail_title"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tv_wcqj_detail_timeApply"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"/>
            </LinearLayout>
            <!--开始时间-->
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <TextView
                    android:text="@string/wcqj_et_wyqj_kssj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    />
                <TextView
                    android:id="@+id/tv_wcqj_detail_timeStart"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"/>
            </LinearLayout>
            <!--结束时间-->
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <TextView
                    android:text="@string/wcqj_et_wyqj_jssj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    />
                <TextView
                    android:id="@+id/tv_wcqj_detail_timeEnd"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"/>
            </LinearLayout>
            <!--外出时长-->
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <TextView
                    android:text="@string/wcqj_et_wyqj_wcdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    />
                <TextView
                    android:id="@+id/tv_wcqj_detail_days"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"/>
            </LinearLayout>
            <!--外出地点-->
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <TextView
                    android:text="@string/wcqj_et_wyqj_wcdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    />
                <TextView
                    android:id="@+id/tv_wcqj_detail_place"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"/>
            </LinearLayout>
            <!--外出理由-->
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/wcqj_et_wyqj_wcly"
                    android:layout_gravity="top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    />
                <com.kingja.supershapeview.view.SuperShapeTextView
                    android:id="@+id/tv_wcqj_detail_reason"
                    android:gravity="top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:super_dashWidth="2dp"
                    app:super_solidColor="@color/white"
                    app:super_strokeColor="@color/black"
                    app:super_strokeWidth="0dp"/>
            </LinearLayout>
        </LinearLayout>
        <!--进度条-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_shadow"
            >

        </LinearLayout>
        <!--证明文件-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/shape_shadow">
            <!--证明文件-->
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/wcqj_tv_wyqj_zmwj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    />
            </LinearLayout>
            <!--证明文件 图片-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginLeft="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/zmwj"
                    android:layout_marginRight="10dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>
                <ImageView
                    android:src="@drawable/zmwj"
                    android:layout_marginRight="10dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
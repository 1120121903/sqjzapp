<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".subModule.rcbg.RcbgDetailActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.hjq.bar.TitleBar
            android:id="@+id/tb_rcbg_detail"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@color/green"
            app:titleColor="@null"
            app:leftBackground="@null"
            app:rightBackground="@null"
            app:barStyle="transparent"
            app:leftTitle="@string/title_back"
            app:rightSize="0dp"
            app:title="@string/rcbg_bt_detail_title" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_shadow">
            <!--标题-->
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <ImageView
                    android:background="@drawable/rcbg_list_title"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
                <TextView
                    android:id="@+id/tv_rcbg_detail_title"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <!--内容-->
            <com.kingja.supershapeview.view.SuperShapeTextView
                android:id="@+id/et_rcbg_detail_content"
                android:gravity="top"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="12dp"
                android:layout_margin="10dp"
                android:textColor="@color/black"
                app:super_dashWidth="2dp"
                app:super_solidColor="@color/white"
                app:super_strokeColor="@color/black"
                app:super_strokeWidth="0dp"/>
            <!--照片-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:background="@color/gray"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/zp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>
            </LinearLayout>
            <!--时间-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="时间："
                    android:gravity="center"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_rcbg_detail_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <!--地点-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_height="wrap_content">
                <TextView
                    android:text="地点："
                    android:gravity="center"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_rcbg_detail_place"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@drawable/shape_shadow_bottom">
    <!--标题-->
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <ImageView
            android:background="@drawable/ic_home_xlzx"
            android:layout_marginLeft="20dp"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
        <TextView
            android:text="@string/xlzx_item_title"
            android:theme="@style/MyTextView_single_content"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"/>
    </LinearLayout>
    <!--内容-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="100dp"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_jstx_msg_myhead"
                android:id="@+id/iv_xlzx_head"
                android:layout_margin="10dp"
                android:layout_width="65dp"
                android:layout_height="65dp"/>
            <TextView
                android:id="@+id/tv_xlzx_name"
                android:text="王小二"
                android:gravity="center"
                android:theme="@style/MyTextView_single_title"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_xlzx_zc"
                android:text="国家二级心理咨询师"
                android:theme="@style/MyTextView_single_title"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_xlzx_des"
                android:theme="@style/MyTextView_content_gray"
                android:maxLines="4"
                android:ellipsize="end"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

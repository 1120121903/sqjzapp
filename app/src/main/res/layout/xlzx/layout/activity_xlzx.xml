<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".subModule.xlzx.XlzxActivity">
    <!--顶部标题栏-->
    <com.hjq.bar.TitleBar
        android:visibility="visible"
        android:id="@+id/tb_xlzx"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@color/blue1"
        app:titleColor="@color/white"
        app:leftBackground="@null"
        app:leftColor="@color/white"
        app:rightBackground="@null"
        app:barStyle="transparent"
        app:leftTitle="@string/title_back"
        app:rightSize="0dp"
        app:title="@string/xlzx_tb_title" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/lv_xlzx"
            android:divider="#00000000"
            android:dividerHeight="1.0dp"
            android:scrollbars="none"
            android:cacheColorHint="@android:color/transparent"
            android:fadingEdge="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>
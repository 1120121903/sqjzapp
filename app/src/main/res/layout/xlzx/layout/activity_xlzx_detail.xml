<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".subModule.xlzx.XlzxDetailActivity">
    <!--顶部标题栏-->
    <com.hjq.bar.TitleBar
        android:visibility="visible"
        android:id="@+id/tb_xlzx_detail"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@color/blue1"
        app:titleColor="@color/white"
        app:leftBackground="@null"
        app:leftColor="@color/white"
        app:rightBackground="@null"
        app:barStyle="transparent"
        app:leftTitle="@string/title_back"
        app:rightSize="0dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/blue1"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <TextView
            android:text="您身边的心理专家"
            android:theme="@style/MyTextView_single_title"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:gravity="right|center_vertical"
            android:layout_marginRight="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <ImageView
            android:src="@drawable/ic_xlzx_background"
            android:layout_gravity="end"
            android:layout_width="100dp"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <!--基本信息-->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="150dp">
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="100dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_xlzx_detail_head"
                    android:layout_margin="10dp"
                    android:layout_width="65dp"
                    android:layout_height="65dp"/>
                <TextView
                    android:id="@+id/tv_xlzx_detail_name"
                    android:gravity="center"
                    android:theme="@style/MyTextView_single_title"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_xlzx_detail_zc"
                    android:theme="@style/MyTextView_single_title"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_xlzx_detail_des"
                    android:theme="@style/MyTextView_content_gray"
                    android:maxLines="4"
                    android:ellipsize="end"
                    android:paddingBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:background="@color/gray1"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <!--可预约时间-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--标题-->
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <ImageView
                    android:background="@drawable/ic_xlzx_detail_left"
                    android:layout_marginLeft="50dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
                <TextView
                    android:text="可预约时间："
                    android:theme="@style/MyTextView_single_title"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"/>
            </LinearLayout>
            <TextView
                android:text="2020-03-02 10:00"
                android:layout_marginLeft="70dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"/>
            <TextView
                android:text="2020-03-02 10:00"
                android:layout_marginLeft="70dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/bt_xlzx_detail_order"
        android:text="我要预约"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@color/blue1"
        android:layout_marginBottom="20dp"
        android:layout_width="100dp"
        android:layout_height="40dp"/>
</LinearLayout>
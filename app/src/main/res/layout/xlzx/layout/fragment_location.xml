<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".subModule.onlineSignIn.LocationFragment"
    android:orientation="vertical">
    <!--顶部标题栏-->
    <com.hjq.bar.TitleBar
        android:visibility="visible"
        android:id="@+id/tb_onlinesignin_titlebar"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@color/green"
        app:titleColor="@null"
        app:leftBackground="@null"
        app:rightBackground="@null"
        app:barStyle="transparent"
        app:leftTitle="@string/title_back"
        app:rightSize="0dp"
        app:title="@string/onlinesignin_titlebar" />
    <!--地图-->
    <com.amap.api.maps2d.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="250dp"/>
    <!--我的位置-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="vertical"
        android:background="@drawable/shape_shadow">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
            <ImageView
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/onlinesignin_location_gray"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:text="@string/onlinesignin_tv_mylocation"/>
        </LinearLayout>
        <TextView
            android:layout_gravity="center"
            android:id="@+id/tv_onlinesignin_currentlocation"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="20dp"
            android:layout_marginLeft="55dp"/>
    </LinearLayout>
    <!--签到-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/shape_shadow"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/clock"/>
            <TextClock
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:format24Hour ="yyyy-MM-dd  HH:mm:ss"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="center">
            <com.sys8.sqjzapp.common.design.CommonShapeButton
                android:id="@+id/bt_onlinesignin_signin"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:text="签 到"
                android:textColor="@color/white"
                android:textSize="30sp"
                app:csb_fillColor="@color/green"
                app:csb_cornerRadius="80dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>
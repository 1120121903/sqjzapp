<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".subModule.zjwbj.ZjwbjActivity">
    <!--顶部标题栏-->
    <com.hjq.bar.TitleBar
        android:visibility="visible"
        android:id="@+id/tb_zjwbj"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@color/blue1"
        app:titleColor="@null"
        app:leftBackground="@null"
        app:rightBackground="@null"
        app:barStyle="transparent"
        app:leftTitle="@string/title_back"
        app:rightSize="0dp"
        app:title="@string/zjwbj_tb_title" />
    <!--中间内容-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--Tab标签页-->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_zjwbj"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:tabGravity="fill"
            app:tabMaxWidth="0dp"
            app:tabBackground="@color/white"
            app:tabRippleColor="@color/white"
            app:tabIndicatorColor="@color/blue1"
            app:tabIndicatorFullWidth="false"
            app:tabMode="fixed"
            app:tabMinWidth="40dp"
            app:tabPaddingStart="5dp"
            app:tabPaddingEnd="5dp"
            app:tabSelectedTextColor="@color/blue1"
            app:tabTextColor="@color/black"
            />
        <View
            android:background="@color/gray"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <!--内容-->
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/vp_zjwbj"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginBottom="5dp"
    android:background="@drawable/shape_shadow">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <!--开始时间-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">
            <TextView
                android:text="@string/zjwbj_tv_tbbj_bjsj"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/et_zjwbj_tbbj_bjsj"
                android:hint="点击选择病检时间"
                android:focusable="false"
                android:layout_gravity="left"
                android:paddingLeft="12dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <!--病检说明-->
        <com.kingja.supershapeview.view.SuperShapeEditText
            android:id="@+id/et_zjwbj_tbbj_bjsm"
            android:gravity="top"
            android:hint="@string/zjwbj_set_tbbj_zjwbjsm"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="12dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            app:super_dashWidth="2dp"
            app:super_solidColor="@color/white"
            app:super_strokeColor="@color/black"
            app:super_strokeWidth="1dp"/>
        <!--证明文件-->
        <TextView
            android:text="@string/zjwbj_tv_tbbj_zmwj"
            android:layout_margin="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@color/gray">
            <ImageButton
                android:background="@color/white"
                android:src="@drawable/ic_wcqj_wyqj_zmwj"
                android:layout_margin="3dp"
                android:layout_width="100dp"
                android:layout_height="100dp"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/bt_zjwbj_tbbj_save"
        android:visibility="visible"
        android:layout_gravity="center"
        android:clickable="true"
        android:text="提交"
        android:layout_width="100dp"
        android:layout_height="50dp"/>
</LinearLayout>

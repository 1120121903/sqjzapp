<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".subModule.zjwbj.delayApplyList.ZjwbjDelayAddActivity">
    <!--顶部标题栏-->
    <com.hjq.bar.TitleBar
        android:visibility="visible"
        android:id="@+id/tb_zjwbj_delay_add"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@color/blue1"
        app:titleColor="@color/white"
        app:leftBackground="@null"
        app:leftColor="@color/white"
        app:rightBackground="@null"
        app:barStyle="transparent"
        app:leftTitle="@string/title_back"
        app:rightSize="0dp"
        app:title="@string/zjwbj_tb_delay_apply"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="5dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
            <!--延期时间-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">
                <TextView
                    android:text="@string/zjwbj_delay_tv_delay_time"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/et_zjwbj_delay_time"
                    android:hint="一个月至三个月"
                    android:focusable="false"
                    android:layout_gravity="left"
                    android:paddingLeft="12dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <!--延期说明-->
            <com.kingja.supershapeview.view.SuperShapeEditText
                android:id="@+id/et_zjwbj_delay_reason"
                android:gravity="top"
                android:hint="@string/zjwbj_delay_tv_reason"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="12dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                app:super_dashWidth="2dp"
                app:super_solidColor="@color/white"
                app:super_strokeColor="@color/black"
                app:super_strokeWidth="1dp"/>
            <!--证明文件-->
            <TextView
                android:text="@string/zjwbj_tv_tbbj_zmwj"
                android:layout_margin="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@color/gray">
                <ImageButton
                    android:background="@color/white"
                    android:src="@drawable/ic_wcqj_wyqj_zmwj"
                    android:layout_margin="3dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/bt_zjwbj_delay_save"
            android:visibility="visible"
            android:layout_gravity="center"
            android:clickable="true"
            android:text="提交"
            android:layout_width="100dp"
            android:layout_height="50dp"/>
    </LinearLayout>
</LinearLayout>
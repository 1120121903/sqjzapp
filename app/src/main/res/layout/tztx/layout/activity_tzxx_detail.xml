<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.tztx.TzxxDetailActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.hjq.bar.TitleBar
            android:id="@+id/tb_main_title"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@color/green"
            app:titleColor="@null"
            app:leftBackground="@null"
            app:rightBackground="@null"
            app:barStyle="transparent"
            app:leftTitle="@string/title_back"
            app:rightSize="0dp"
            app:title="@string/tztx_tb_detail_title" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_shadow">
            <!--标题-->
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <ImageView
                    android:background="@drawable/ic_icon_notify"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
                <TextView
                    android:id="@+id/tv_tzxx_detail_title"
                    android:text="提醒消息"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <!--内容-->
            <TextView
                android:id="@+id/tv_tzxx_detail_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <!--司法所-->
            <TextView
                android:id="@+id/tv_tzxx_detail_dep"
                android:gravity="right"
                android:text="445654"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <!--时间-->
            <TextView
                android:id="@+id/tv_tzxx_detail_time"
                android:text="21212"
                android:gravity="right"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
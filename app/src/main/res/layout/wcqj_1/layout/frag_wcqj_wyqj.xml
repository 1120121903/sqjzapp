<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginBottom="5dp"
    android:background="@drawable/shape_shadow">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <!--开始时间-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">
            <TextView
                android:text="@string/wcqj_et_wyqj_kssj"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/et_wcqj_wyqj_kssj"
                android:hint="点击选择开始时间"
                android:focusable="false"
                android:layout_gravity="left"
                android:paddingLeft="12dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <!--结束时间-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">
            <TextView
                android:text="@string/wcqj_et_wyqj_jssj"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/et_wcqj_wyqj_jssj"
                android:hint="点击选择结束时间"
                android:focusable="false"
                android:layout_gravity="left"
                android:paddingLeft="12dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <!--外出时长-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">
            <TextView
                android:text="@string/wcqj_et_wyqj_wcsc"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/et_wcqj_wyqj_wcsc"
                android:layout_gravity="center"
                android:enabled="false"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <!--外出地点-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">
            <TextView
                android:text="@string/wcqj_et_wyqj_wcdd"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/et_wcqj_wyqj_wcdd"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <View
            android:background="@color/gray"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <!--外出理由-->
        <com.kingja.supershapeview.view.SuperShapeEditText
            android:id="@+id/et_wcqj_wyqj_wcly"
            android:gravity="top"
            android:hint="@string/wcqj_tv_wyqj_wcly"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="12dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            app:super_dashWidth="2dp"
            app:super_solidColor="@color/white"
            app:super_strokeColor="@color/black"
            app:super_strokeWidth="1dp"/>
        <!--证明文件-->
        <TextView
            android:text="@string/wcqj_tv_wyqj_zmwj"
            android:layout_margin="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@color/gray">
            <ImageButton
                android:background="@color/white"
                android:src="@drawable/ic_wcqj_wyqj_zmwj"
                android:layout_margin="3dp"
                android:layout_width="100dp"
                android:layout_height="100dp"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/bt_wcqj_wyqj_save"
        android:layout_gravity="center"
        android:text="提交"
        android:layout_width="100dp"
        android:layout_height="50dp"/>
</LinearLayout>

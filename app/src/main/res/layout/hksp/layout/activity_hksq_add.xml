<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".subModule.hksq.HksqAddActivity">
    <!--顶部标题栏-->
    <com.hjq.bar.TitleBar
        android:visibility="visible"
        android:id="@+id/tb_hksq_add"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@color/blue1"
        app:titleColor="@color/white"
        app:leftBackground="@null"
        app:leftColor="@color/white"
        app:rightBackground="@null"
        app:barStyle="transparent"
        app:leftTitle="@string/title_back"
        app:rightSize="0dp"
        app:title="@string/hksq_bt_wysq"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <!--会客时间-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">
            <TextView
                android:text="@string/hksq_tv_time"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/et_hksq_wysq_time"
                android:hint="点击选择日期"
                android:focusable="false"
                android:layout_gravity="left"
                android:paddingLeft="12dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <!--会客地点-->
        <LinearLayout
            android:orientation="horizontal"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">
            <TextView
                android:text="@string/hksq_tv_place"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/et_hksq_wysq_place"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <!--会客人姓名-->
        <LinearLayout
            android:orientation="horizontal"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">
            <TextView
                android:text="@string/hksq_tv_name"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/et_hksq_wysq_name"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <View
            android:background="@color/gray"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <!--会见原因-->
        <com.kingja.supershapeview.view.SuperShapeEditText
            android:id="@+id/et_hksq_wysq_reason"
            android:gravity="top"
            android:hint="@string/hksq_tv_wysq_reason"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="12dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            app:super_dashWidth="2dp"
            app:super_solidColor="@color/white"
            app:super_strokeColor="@color/black"
            app:super_strokeWidth="1dp"/>
        <!--证明文件-->
        <TextView
            android:text="@string/hksq_tv_wysq_zmwj"
            android:layout_margin="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@color/gray">
            <ImageButton
                android:background="@color/white"
                android:src="@drawable/ic_wcqj_wyqj_zmwj"
                android:layout_margin="3dp"
                android:layout_width="100dp"
                android:layout_height="100dp"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/bt_hksq_wysq_save"
        android:visibility="visible"
        android:layout_gravity="center"
        android:clickable="true"
        android:text="提交"
        android:layout_marginBottom="5dp"
        android:layout_width="100dp"
        android:layout_height="50dp"/>
</LinearLayout>
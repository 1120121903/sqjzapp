<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_shadow_bottom">
    <LinearLayout
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <!--标题-->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <ImageView
                android:background="@drawable/ic_home_tdqy"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <TextView
                android:id="@+id/tv_tdqy_listItem_title"
                android:text="进入特定区域申请"
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv_tdqy_listItem_timeApply"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="20dp"/>
        </LinearLayout>
        <!--进入时间-->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView
                android:text="@string/tdqy_jrsj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                />
            <TextView
                android:id="@+id/tv_tdqy_listItem_jrsj"
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
        </LinearLayout>
        <!--申请原因-->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView
                android:text="@string/tdqy_sqyy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                />
            <TextView
                android:id="@+id/tv_tdqy_listItem_reason"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
        </LinearLayout>
        <!--审批状态-->
        <TextView
            android:id="@+id/tv_tdqy_listItem_state"
            android:layout_marginRight="10dp"
            android:gravity="right|center_vertical"
            android:textColor="@color/blue1"
            android:layout_width="match_parent"
            android:layout_height="20dp"/>
    </LinearLayout>
</LinearLayout>

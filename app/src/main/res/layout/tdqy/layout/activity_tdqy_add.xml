<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".subModule.tdqy.TdqyAddActivity">
    <!--顶部标题栏-->
    <com.hjq.bar.TitleBar
        android:visibility="visible"
        android:id="@+id/tb_tdqy_add"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@color/blue1"
        app:titleColor="@color/white"
        app:leftBackground="@null"
        app:leftColor="@color/white"
        app:rightBackground="@null"
        app:barStyle="transparent"
        app:leftTitle="@string/title_back"
        app:rightSize="0dp"
        app:title="@string/tdqy_add_title"/>
    <LinearLayout
        android:id="@+id/line_tdqy"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <!--开始时间-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">
            <TextView
                android:theme="@style/MyTextView_single_content"
                android:text="@string/tdqy_tv_kssj"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/et_tdqy_time_start"
                android:hint="点击选择开始时间"
                android:focusable="false"
                android:layout_gravity="left"
                android:paddingLeft="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <!--结束时间-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">
            <TextView
                android:theme="@style/MyTextView_single_content"
                android:text="@string/tdqy_tv_jssj"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/et_tdqy_time_end"
                android:hint="点击选择结束时间"
                android:focusable="false"
                android:layout_gravity="left"
                android:paddingLeft="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <!--进入地点-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">
            <TextView
                android:theme="@style/MyTextView_single_content"
                android:text="@string/tdqy_tv_jrdd"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/et_tdqy_place"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"/>
        </LinearLayout>
        <View
            android:background="@color/gray"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <!--外出理由-->
        <com.kingja.supershapeview.view.SuperShapeEditText
            android:id="@+id/et_tdqy_reason"
            android:gravity="top"
            android:hint="@string/tdqy_tv_reason"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="12dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            app:super_dashWidth="2dp"
            app:super_solidColor="@color/white"
            app:super_strokeColor="@color/black"
            app:super_strokeWidth="1dp"/>
        <!--证明文件-->
        <TextView
            android:theme="@style/MyTextView_single_content"
            android:text="@string/tdqy_tv_zmwj"
            android:layout_margin="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@color/gray">
            <ImageButton
                android:background="@color/white"
                android:src="@drawable/ic_wcqj_wyqj_zmwj"
                android:layout_margin="3dp"
                android:layout_width="100dp"
                android:layout_height="100dp"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/bt_tdqy_add_save"
        android:visibility="visible"
        android:layout_gravity="center"
        android:clickable="true"
        android:text="提交"
        android:layout_marginBottom="5dp"
        android:layout_width="100dp"
        android:layout_height="50dp"/>
</LinearLayout>
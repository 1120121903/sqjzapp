<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:banner="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/sl_home"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:descendantFocusability="blocksDescendants"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="900dp">
            <!--内容-->
            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/home_background"
                android:layout_width="match_parent"
                android:layout_height="500dp">
                <!--顶部标题栏-->
                <com.hjq.bar.TitleBar
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    app:titleColor="@color/white"
                    app:leftBackground="@null"
                    app:rightBackground="@null"
                    app:barStyle="transparent"
                    app:backButton = "false"
                    app:title="@string/app_name" />
                <!--宣传图片-->
                <com.youth.banner.Banner
                    xmlns:banner="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/banner_home_top"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    banner:indicator_selected_color="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="170dp" />
                <com.youth.banner.indicator.RoundLinesIndicator
                    android:id="@+id/indicator_home_top"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    />
                <!--按钮列表-->
                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="260dp">
                    <include layout="@layout/home_button"/>
                </LinearLayout>
                <!--通知提醒-->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <include layout="@layout/home_message" />
                </LinearLayout>
            </LinearLayout>
            <View
                android:background="@color/gray"
                android:layout_width="match_parent"
                android:layout_height="5dp"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!--最新课程-->
                <FrameLayout
                    android:id="@+id/fl_home_zxkc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <View
                    android:background="@color/gray"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"/>
                <!--最新帮扶-->
                <FrameLayout
                    android:id="@+id/fl_home_zxbf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <View
                    android:background="@color/gray"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"/>
                <!--最新公益-->
                <FrameLayout
                    android:id="@+id/fl_home_zxgy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>


<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--顶部标题栏-->
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/background_gradient1"

        android:layout_width="match_parent"
        android:layout_height="200dp">
        <com.hjq.bar.TitleBar
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            app:titleColor="@color/white"
            app:leftBackground="@null"
            app:rightBackground="@null"
            app:barStyle="transparent"
            app:backButton = "false"
            app:title="@string/main_bottom_home" />
        <View
            android:background="@color/blueDeep"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <com.youth.banner.Banner
            android:id="@+id/banner_home_top"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:layout_width="match_parent"
            android:layout_height="150dp" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/background_gradient2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--通知提醒-->
        <include layout="@layout/home_message" />
        <!--按钮列表-->
        <include layout="@layout/home_button"/>
        <!--视频列表-->
        <include layout="@layout/home_jyxx"/>
    </LinearLayout>

</LinearLayout>

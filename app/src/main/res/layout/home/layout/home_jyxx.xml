<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="35dp">
            <ImageView
                android:src="@drawable/ic_home_zxkc"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="5dp"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <TextView
                android:text="@string/home_tv_jyxx"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:gravity="center_vertical|left"
                android:layout_width="180dp"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/bt_home_jyxx_next"
                android:text="@string/home_bt_jyxx_next"
                android:background="@null"
                android:layout_width="120dp"
                android:gravity="center_vertical|right"
                android:layout_marginRight="10dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="150dp"
                android:layout_height="match_parent">
                <VideoView
                    android:id="@+id/vv_home_jyxx1"
                    android:layout_width="100dp"
                    android:layout_height="60dp" />
                <TextView
                    android:id="@+id/tv_home_jyxx1_cotent"
                    android:gravity="center"
                    android:text="@string/home_jyxx1_cotent"
                    android:textSize="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"/>
                <TextView
                    android:id="@+id/tv_home_jyxx1_time"
                    android:gravity="center"
                    android:text="@string/home_jyxx1_time"
                    android:textSize="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="30dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="150dp"
                android:layout_height="match_parent">
                <VideoView
                    android:id="@+id/vv_home_jyxx2"
                    android:layout_width="100dp"
                    android:layout_height="60dp" />
                <TextView
                    android:id="@+id/tv_home_jyxx2_cotent"
                    android:gravity="center"
                    android:text="@string/home_jyxx2_cotent"
                    android:textSize="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"/>
                <TextView
                    android:id="@+id/tv_home_jyxx2_time"
                    android:gravity="center"
                    android:text="@string/home_jyxx2_time"
                    android:textSize="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>

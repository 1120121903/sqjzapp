<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/home_tztx_message"
            android:text="通知及嘻嘻嘻哦"
            android:theme="@style/MyTextView_single_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/home_tztx_time"
            android:text="2020-03-02 9:22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/MyTextView_single_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/home_tztx_content"
        android:layout_gravity="left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:text="2020年1月23日"
        android:theme="@style/MyTextView_single_content" />
</LinearLayout>

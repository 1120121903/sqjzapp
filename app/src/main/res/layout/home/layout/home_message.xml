<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/iv_home_message"
            android:background="@drawable/message"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="250dp"
            android:layout_height="60dp">
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="25dp">
                <TextView
                    android:text="@string/home_messae_1_cotent"
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginLeft="15dp"
                    android:text="@string/home_messae_1_time"
                    android:textSize="11dp"
                    android:textColor="@color/grayDeep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="25dp">
                <TextView
                    android:text="@string/home_messae_2_cotent"
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginLeft="15dp"
                    android:text="@string/home_messae_2_time"
                    android:textSize="11dp"
                    android:textColor="@color/grayDeep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/bt_home_message_detail"
            android:background="@drawable/next"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="16dp"
            android:layout_height="16dp"/>
    </LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="35dp">
            <ImageView
                android:src="@drawable/ic_home_zxgy"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="5dp"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <TextView
                android:text="@string/home_tv_zxgy"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:gravity="center_vertical|left"
                android:layout_width="180dp"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/bt_home_gyhd_next"
                android:text="@string/home_bt_all"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>
            <ImageView
                android:src="@drawable/ic_next_black"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!--标题1-->
                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">
                    <TextView
                        android:id="@+id/tv_zxgy_listItem_title1"
                        android:text="最新公益标题1"
                        android:layout_marginLeft="30dp"
                        android:theme="@style/MyTextView_single_content"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="20dp"/>
                    <TextView
                        android:id="@+id/tv_zxgy_listItem_time_fbsj1"
                        android:text="2020-02-03"
                        android:textSize="12dp"
                        android:theme="@style/MyTextView_single_content"
                        android:layout_marginRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"/>
                </LinearLayout>
                <!--标题2-->
                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">
                    <TextView
                        android:id="@+id/tv_zxgy_listItem_title2"
                        android:text="最新公益标题2"
                        android:layout_marginLeft="30dp"
                        android:theme="@style/MyTextView_single_content"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="20dp"/>
                    <TextView
                        android:id="@+id/tv_zxgy_listItem_time_fbsj2"
                        android:text="2020-03-03"
                        android:textSize="12dp"
                        android:theme="@style/MyTextView_single_content"
                        android:layout_marginRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"/>
                </LinearLayout>
            </LinearLayout>
    </LinearLayout>
</LinearLayout>

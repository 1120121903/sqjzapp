<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".subModule.jzdbg.JzdbgAddActivity">
    <!--顶部标题栏-->
    <com.hjq.bar.TitleBar
        android:visibility="visible"
        android:id="@+id/tb_jzdbg_add"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@color/blue1"
        app:titleColor="@color/white"
        app:leftBackground="@null"
        app:leftColor="@color/white"
        app:rightBackground="@null"
        app:barStyle="transparent"
        app:leftTitle="@string/title_back"
        app:rightSize="0dp"
        app:title="@string/jzdbg_bt_sqbj"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="5dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
            <!--新居住地所在地区-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">
                <TextView
                    android:text="@string/jzdbg_tv_sqbg_szdq"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/et_jzdbg_sqbg_szdq"
                    android:hint="点击选择新居住地所在地区"
                    android:focusable="false"
                    android:layout_gravity="left"
                    android:paddingLeft="12dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <!--新居住地详细地址-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">
                <TextView
                    android:text="@string/jzdbg_tv_sqbg_xxdz"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/et_jzdbg_sqbg_xxdz"
                    android:layout_gravity="left"
                    android:paddingLeft="12dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <!--变更原因-->
            <com.kingja.supershapeview.view.SuperShapeEditText
                android:id="@+id/et_jzdbg_sqbg_bgyy"
                android:gravity="top"
                android:hint="@string/jzdbg_set_sqbg_bgyy"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="12dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                app:super_dashWidth="2dp"
                app:super_solidColor="@color/white"
                app:super_strokeColor="@color/black"
                app:super_strokeWidth="1dp"/>
            <!--证明文件-->
            <TextView
                android:text="@string/jzdbg_tv_sqbg_zmwj"
                android:layout_margin="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@color/gray">
                <ImageButton
                    android:background="@color/white"
                    android:src="@drawable/ic_wcqj_wyqj_zmwj"
                    android:layout_margin="3dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/bt_jzdbg_sqbg_save"
            android:visibility="visible"
            android:layout_gravity="center"
            android:clickable="true"
            android:text="提交"
            android:layout_width="100dp"
            android:layout_height="50dp"/>
    </LinearLayout>
</LinearLayout>
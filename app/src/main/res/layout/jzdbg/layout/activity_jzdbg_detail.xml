<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".subModule.jzdbg.JzdbgDetailActivity">
    <com.hjq.bar.TitleBar
        android:id="@+id/tb_jzdbg_detail"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@color/blue1"
        app:titleColor="@null"
        app:leftBackground="@null"
        app:rightBackground="@null"
        app:barStyle="transparent"
        app:leftTitle="@string/title_back"
        app:rightSize="0dp"
        app:title="@string/zjwbj_bt_detail_title" />
    <!--居住地变更-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_shadow_bottom">
        <!--标题-->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <ImageView
                android:background="@drawable/ic_homt_jzdbg"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <TextView
                android:text="@string/jzdbg_tb_title"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv_jzdbg_detail_timeApply"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="20dp"/>
        </LinearLayout>
        <!--接收单位-->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView
                android:text="@string/jzdbg_tv_sqbg_jsdw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                />
            <TextView
                android:id="@+id/tv_jzdbg_detail_jsdw"
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
        </LinearLayout>
        <!--新居住地-->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView
                android:text="@string/jzdbg_tv_sqbg_xjzd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                />
            <TextView
                android:id="@+id/tv_jzdbg_detail_xjzd"
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
        </LinearLayout>
        <!--证明文件-->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical|top"
            android:layout_marginLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/jzdbg_tv_sqbg_zmwj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                />
            <ImageView
                android:src="@drawable/ic_zmwj"
                android:layout_marginRight="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <ImageView
                android:src="@drawable/ic_zmwj"
                android:layout_marginRight="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
        </LinearLayout>
        <!--变更原因-->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/jzdbg_tv_bgls_detail_bgyy"
                android:layout_gravity="top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                />
            <com.kingja.supershapeview.view.SuperShapeTextView
                android:id="@+id/tv_jzdbg_detail_bgyy"
                android:gravity="top"
                android:paddingTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:super_dashWidth="2dp"
                app:super_solidColor="@color/white"
                app:super_strokeColor="@color/black"
                app:super_strokeWidth="0dp"/>
        </LinearLayout>
    </LinearLayout>
    <!--进度条-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_jzdbg_detail_history"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="100dp"
android:layout_height="120dp"
android:orientation="vertical"
android:background="@drawable/shape_shadow">
<Button
    android:id="@+id/bt_educationlearning_ppw_video"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:text="@string/educationlearning_media_type_video"
    android:background="@drawable/shape_shadow_bottom"></Button>
<Button
    android:id="@+id/bt_educationlearning_ppw_audio"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:text="@string/educationlearning_media_type_audio"
    android:background="@drawable/shape_shadow_bottom"></Button>
<Button
    android:id="@+id/bt_educationlearning_ppw_picture"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:text="@string/educationlearning_media_type_picture"
    android:background="@color/white"></Button>
</LinearLayout>
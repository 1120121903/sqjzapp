<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".subModule.educationLearning.learningDetailList.LearningPictureDetailListActivity">

    <!--顶部标题栏-->
    <com.hjq.bar.TitleBar
        android:visibility="visible"
        android:id="@+id/tb_educationlearning_picture_detail_list_titlebar"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@color/blue1"
        app:titleColor="@null"
        app:leftBackground="@null"
        app:rightBackground="@null"
        app:barStyle="transparent"
        app:leftTitle="@string/title_back"
        app:rightSize="0dp"
        app:title="@string/educationlearning_titlebar" />
    <!--中部页面显示内容-->
    <RelativeLayout
        android:id="@+id/layout_educationlearning_picture_detail_list_main_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray"
        >
        <WebView
            android:id="@+id/wv_educationlearning_picture_detail_list_main_page"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"/>
        <com.barnettwong.dragfloatactionbuttonlibrary.view.DragFloatActionButton
            android:id="@+id/bt_learning_education_exam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:clickable="true"
            android:src="@drawable/ic_learning_education_exam"
            android:background="@drawable/button_bg"/>
    </RelativeLayout>
</LinearLayout>
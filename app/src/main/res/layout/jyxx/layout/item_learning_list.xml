<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:background="@drawable/shape_shadow_bottom">

    <ImageView
        android:id="@+id/image_learning_list_medai_type"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_jyxx_video" />

    <TextView
        android:id="@+id/tv_learning_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text=""
        android:textSize="16dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/image_learning_list_medai_type"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_learning_list_course_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text=""
        app:layout_constraintStart_toEndOf="@+id/image_learning_list_medai_type"
        app:layout_constraintTop_toBottomOf="@+id/tv_learning_list_title" />

    <TextView
        android:id="@+id/tv_learning_list_course_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text=""
        app:layout_constraintStart_toEndOf="@+id/tv_learning_list_course_number"
        app:layout_constraintTop_toBottomOf="@+id/tv_learning_list_title" />

    <ImageView
        android:id="@+id/image_learning_list_people_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_learning_list_medai_type"
        app:srcCompat="@drawable/ic_learning_education_number_1" />

    <TextView
        android:id="@+id/tv_learning_list_people_number"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="11111"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/image_learning_list_people_number"
        app:layout_constraintStart_toEndOf="@+id/image_learning_list_people_number"
        app:layout_constraintTop_toTopOf="@+id/image_learning_list_people_number" />

    <ImageButton
        android:id="@+id/imageBt_learning_list_collect_statu"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/tv_learning_list_collect_statu"
        app:layout_constraintEnd_toStartOf="@+id/tv_learning_list_collect_statu"
        app:layout_constraintTop_toTopOf="@+id/tv_learning_list_collect_statu"
        app:srcCompat="@drawable/ic_learning_education_not_collect" />

    <TextView
        android:id="@+id/tv_learning_list_collect_statu"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="16dp"
        android:text="收藏"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/image_learning_list_thumbnail"
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"
        tools:srcCompat="@drawable/video_bg" />

    <ImageView
        android:id="@+id/image_learning_list_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_learning_education_pass" />
</androidx.constraintlayout.widget.ConstraintLayout>
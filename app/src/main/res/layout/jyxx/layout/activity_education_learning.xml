<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".subModule.educationLearning.EducationLearningActivity"
    android:background="@color/gray">
    <!--顶部标题栏-->
    <com.hjq.bar.TitleBar
        android:visibility="visible"
        android:id="@+id/tb_educationlearning_titlebar"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@color/green"
        app:titleColor="@null"
        app:leftBackground="@null"
        app:rightBackground="@null"
        app:barStyle="transparent"
        app:leftTitle="@string/title_back"
        app:rightSize="0dp"
        app:title="@string/educationlearning_titlebar" />
    <!--中部页面显示内容-->
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_educationlearning_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="13"
        />
    <!--底部标签页滑动切换-->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/ecuation_bottom_nav_view"
        android:background="@color/green"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_alignParentBottom="true"
        app:menu="@menu/education_learning_tab"
        app:labelVisibilityMode="labeled"
        />
</LinearLayout>
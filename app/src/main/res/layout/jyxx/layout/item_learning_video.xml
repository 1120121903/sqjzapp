<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:background="@drawable/shape_shadow">

    <ImageView
        android:id="@+id/iv_learning_education_video_thumbnail"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/video_bg" />

    <TextView
        android:id="@+id/item_learning__education_video_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="教你学习交通法"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_learning_education_video_thumbnail"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_item_learning_education_video_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:lineSpacingExtra="8dp"
        android:text="afsdkfjashdofijasdoifjasaldioasidjfajosdijfoasdf21351616584654351465adfjdflsdjfoiijfsodifjsd"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_learning_education_video_thumbnail"
        app:layout_constraintTop_toBottomOf="@+id/item_learning__education_video_title" />

    <ImageView
        android:id="@+id/iv_item_learning_video_number"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_learning_education_video_thumbnail"
        tools:srcCompat="@drawable/ic_learning_education_number" />

    <TextView
        android:id="@+id/tv_item_learning_video_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="23人已学习"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_item_learning_video_number" />

    <ImageButton
        android:id="@+id/ibt_item_learning_video_collect_statu"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_item_learning_video_number"
        app:srcCompat="@drawable/ic_learning_education_not_collect"
        android:background="@color/white"/>

    <TextView
        android:id="@+id/tv_learning_education_video_collect_statu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="收藏"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ibt_item_learning_video_collect_statu" />

    <ImageView
        android:id="@+id/item_learning_education_video_pass"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_learning_education_pass" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabt_learning_education_video_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:backgroundTint="#80D8FF"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="@+id/iv_learning_education_video_thumbnail"
        app:layout_constraintEnd_toEndOf="@+id/iv_learning_education_video_thumbnail"
        app:layout_constraintStart_toStartOf="@+id/iv_learning_education_video_thumbnail"
        app:layout_constraintTop_toTopOf="@+id/iv_learning_education_video_thumbnail"
        app:srcCompat="@drawable/ic_play_arrow_black_24dp" />
</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".subModule.educationLearning.LearningListPageFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white">
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/education_top_tab_layout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            app:tabGravity="fill"
            app:tabMaxWidth="0dp"
            app:tabBackground="@color/white"
            app:tabRippleColor="@color/white"
            app:tabIndicatorColor="@color/blue1"
            app:tabIndicatorFullWidth="false"
            app:tabMode="fixed"
            app:tabMinWidth="40dp"
            app:tabPaddingStart="5dp"
            app:tabPaddingEnd="5dp"
            app:tabSelectedTextColor="@color/blue1"
            app:tabTextColor="@color/black"
            />
        <ImageButton
            android:id="@+id/education_media_type_select"
            android:src="@drawable/ic_menu_black_24dp"
            android:padding="5dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/shape_shadow_left"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#E4E4E4"
        ></View>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/education_view_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
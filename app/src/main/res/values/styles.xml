<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:background">#00000000</item>
    </style>

    <!--单行EditText(单行，黑色)-->
    <style name="MyEditText" parent="@android:style/Widget.EditText">
        <item name="android:textSize">16dp</item>
        <item name="android:editTextColor">@color/black</item>
        <item name="android:editable">true</item>
        <item name="android:maxLines">1</item>
    </style>

    <!--TextView 标题（单行，黑色，左右margin：10dp）-->
    <style name="MyTextView_single_title" parent="@android:style/Widget.TextView">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:letterSpacing">0.03</item><!--字间距-->
    </style>

    <!--TextView 内容（单行，左右margin：10dp）-->
    <style name="MyTextView_single_content" parent="@android:style/Widget.TextView">
        <item name="android:textSize">14dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:letterSpacing">0.03</item><!--字间距-->
    </style>

    <!--TextView 内容（两行，左右margin：10dp）-->
    <style name="MyTextView_double_cotent" parent="@android:style/Widget.TextView">
        <item name="android:textSize">14dp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:lineSpacingMultiplier">1.1</item><!--行间距-->
        <item name="android:letterSpacing">0.03</item><!--字间距-->
    </style>

    <!--TextView 内容（多行，黑色，左右margin：10dp）-->
    <style name="MyTextView_cotent" parent="@android:style/Widget.TextView">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:lineSpacingMultiplier">1.3</item><!--行间距-->
        <item name="android:letterSpacing">0.03</item><!--字间距-->
    </style>

</resources>
